{% extends 'DeployNetBundle::layout.html.twig' %}
{% block content %}
    {{ include('DeployNetBundle::includes/location.header.html.twig', {'custer': customer, 'location': location, 'page': 'contacts'}) }}
<div class="table-responsive">
    <a href="/customer/contacts/{{ location.id }}/add" class="btn btn-default btn-sm pull-right" role="button">Add Contact</a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Title</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Username</th>
            <th>Last Login</th>
            <th>Login Count</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for contact in location.contacts %}
        <tr>
            <td>{{ contact.firstName }} {{ contact.lastName }}</td>
            <td></td>
            <td>{{ contact.phoneNumber }}<!-- (000) 000-0000 --></td>
            <td>{{ contact.email }}<!-- test@test.com --></td>
            <td></td>
            <td> <!-- --/--/-- --:-- --></td>
            <td></td>
            <td><a href="/customer/contacts/{{ location.id }}/edit/{{ contact.id }}">Edit</a> | Delete</td>
        </tr>
            {% endfor %}
        </tbody>
    </table>
    {#<div class="center-block">#}
