{% extends 'DeployNetBundle::layout.html.twig' %}
{% block content %}
<ol class="breadcrumb">
    <li><a href="/dashboard">Home</a></li>
    <li><a href="/customers">Customer List</a></li>
    <li class="active">{{ customer.name }} (Details)</li>
</ol>
<h1 class="sub-header">{{ customer.name }}</h1>
<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="/customer/details/{{ customer.id }}">Details</a></li>
    <li role="presentation"><a href="/customer/locations/{{ customer.id }}">Sites</a></li>
    <li role="presentation"><a href="/customer/contacts/{{ customer.id }}">Contacts</a></li>
    <li role="presentation"><a href="/customer/projects/{{ customer.id }}">Projects</a></li>
    <li role="presentation"><a href="/customer/orders/{{ customer.id }}">Work Orders</a></li>
    <li role="presentation"><a href="/customer/documents/{{ customer.id }}">Documents</a></li>
</ul>

<h2>Customer Information<a href="/customer/details/{{ customer.id }}/edit" class="btn btn-default btn-sm pull-right" role="button">Edit Details</a></h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Customer Name: </th>
            <td>{{ customer.name }}</td>
        </tr>
        <tr>
            <th>Status: </th>
            <td>{{ customer.active }}</td>
        </tr>
        <tr>
            <th>Primary Contact: </th>
            <td></td>
        </tr>
    </table></div>
<h2>Address</h2>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Address: </th>
            <td>
                <address>
                    {{ customer.address1 }}<br />
                    {{ customer.address2 }}<br />
                    {{ customer.address3 }}<br />
                    {{ customer.city}}, {{ customer.stateId }} {{ customer.postalCode }}
                </address>
            </td>
        </tr>
        <tr>
            <th>Phone: </th>
            <td>{{ customer.phoneNumber }}<!--(000) 000-0000--></td>
        </tr>
        <tr>
            <th>Fax: </th>
            <td>{{ customer.faxNumber }}<!--(000) 000-0000--></td>
        </tr>
    </table>
</div>
{% endblock %}