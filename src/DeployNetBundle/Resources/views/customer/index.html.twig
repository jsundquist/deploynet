{% extends 'DeployNetBundle::layout.html.twig' %}
{% block content %}
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li class="active">Customer List</li>
    </ol>
    <h1 class="sub-header">Customers</h1>
    <a href="/customer/add">Add Customer</a>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Contact</th>
            </tr>
            </thead>
            <tbody>
            {% for customer in customers %}
            <tr>
                <td><a href="/customer/details/{{ customer.id }}">{{ customer.name }}</a></td>
                <td>
                    {{ customer.address1 }}<br />
                    {{ customer.address2 }}<br />
                    {{ customer.city }}, {{ customer.state.abbreviation }} {{ customer.postalCode }}
                </td>
                <td>{{ customer.phoneNumber }}</td>
                <td></td>
            </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="center-block">
            <ul class="pagination text-center">
                <li class="disabled"><span>&laquo;</span></li>
                <li class="active"><span>1 <span class="sr-only">(current)</span></span></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">&raquo;</a></li>
            </ul>
        </div>
    </div>

{% endblock %}