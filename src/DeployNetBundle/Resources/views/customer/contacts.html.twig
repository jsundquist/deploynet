{% extends 'DeployNetBundle::layout.html.twig' %}
{% block content %}
<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/customers">Customer List</a></li>
    <li class="active">{{ customer.name }} (Contacts)</li>
</ol>
<h1 class="sub-header">{{ customer.name }}</h1>
<ul class="nav nav-tabs" role="tablist">
    <li role="presentation"><a href="/customer/details/{{ customer.id }}">Details</a></li>
    <li role="presentation"><a href="/customer/locations/{{ customer.id }}">Locations</a></li>
    <li role="presentation" class="active"><a href="/customer/contacts/{{ customer.id }}">Contacts</a></li>
    <li role="presentation"><a href="/customer/projects/{{ customer.id }}">Projects</a></li>
    <li role="presentation"><a href="/customer/orders/{{ customer.id }}">Work Orders</a></li>
    <li role="presentation"><a href="/customer/documents/{{ customer.id }}">Documents</a></li>
</ul>
<div class="table-responsive">
    <br />
    <a href="/customer/contacts/1/add" class="btn btn-default btn-sm pull-right" role="button">Add Contact</a>
    <div class="clear-fixr"></div>
    <br />
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Title</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Username</th>
            <th>Last Login</th>
            <th>Login Count</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {%  for contact in contacts %}
        <tr>
            <td>{{ contact.firstName }} {{ contact.lastName }}</td>
            <td></td>
            <td>{{ contact.phoneNumber }}<!-- (000) 000-0000 --></td>
            <td>{{ contact.email }}<!-- test@test.com --></td>
            <td></td>
            <td> <!-- --/--/-- --:-- --></td>
            <td></td>
            <td><a href="/customer/contacts/{{ customer.id }}/edit/{{ customer.id }}">Edit</a> | Delete</td>
        </tr>
            {% endfor %}
        </tbody>
    </table>
    {#<div class="center-block">
        <ul class="pagination text-center">
            <li class="disabled"><span>&laquo;</span></li>
            <li class="active"><span>1 <span class="sr-only">(current)</span></span></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">&raquo;</a></li>
        </ul>
    </div>#}
</div>
{% endblock %}